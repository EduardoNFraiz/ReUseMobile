<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doacao.SobreInstituicaoFragment">

    <!-- Conteúdo rolável -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rodape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/exemplo" />

            <TextView
                android:id="@+id/nomeProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_nome_instituicao"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_extrabold"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_breve_descricao_anuncio"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/tituloDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_detalhes_anuncio_instituicao"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_extrabold"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/detalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_detalhes_instituicao_anuncio"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/tituloEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_endereco_instituicao_anuncio"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_extrabold"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_endereco_instituicao_anuncio"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/tituloCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_cnpj_instituicao_anuncio"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_extrabold"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/cnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_cnpj_instituicao_anuncio"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDoacao"
                android:layout_width="350dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="@string/btn_fazer_doacao"
                android:textSize="20dp"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/nunito_sans_semibold"
                android:background="@drawable/estilobtt1"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Rodapé fixo -->
    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/VerdeClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/closet"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/closeticon"/>
        <ImageView
            android:id="@+id/pesquisar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/search_branco" />
        <ImageView
            android:id="@+id/cadastrarRoupa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/baseline_add_circle_24" />
        <ImageView
            android:id="@+id/doacao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/iconedoacao" />
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/person_branco" />
    </LinearLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>