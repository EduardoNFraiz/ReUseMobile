<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.avaliacao.AdicionarAvaliacaoFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_extrabold"
        android:gravity="center"
        android:text="Adicionar Avaliação"
        android:textColor="@color/VerdeClaro"
        android:textSize="30sp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:text="Como foi sua experiência?"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_sans_semibold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="15dp"
        android:text="Avalie de 1 a 5 estrelas para classificar"
        android:textSize="17sp"
        android:textColor="#949494"
        android:fontFamily="@font/nunito_sans_light"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:progressTint="#FF9800"
        android:rating="4.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conte como foi:"
        android:paddingStart="15dp"
        android:textSize="25dp"
        android:fontFamily="@font/nunito_sans_semibold"/>

    <EditText
        android:id="@+id/editTextDetalhes"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_preco_background"
        android:hint="Escreva sobre sua experiência"
        android:visibility="visible"
        android:fontFamily="@font/raleway_extrabold"
        android:inputType="textMultiLine"
        android:maxLength="400"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/VerdeClarinho" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAvaliar"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_gravity="center"
        android:background="@drawable/estilobtt1"
        android:text="Avaliar"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18sp"/>

    
    
</LinearLayout>