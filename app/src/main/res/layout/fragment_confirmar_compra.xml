<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.compra.ConfirmarCompraFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        tools:layout_editor_absoluteX="-43dp"
        tools:layout_editor_absoluteY="-28dp" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Envio"
        android:textColor="@color/VerdeEscuro"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEnderecoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Confirme seu endereço"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEndereco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rua das Oliveiras, nº 123 Campinas - São Paulo"
        android:textColor="@color/VerdeEscuro"
        android:textSize="16sp"
        android:paddingStart="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvEnderecoTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/linha1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEndereco"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPedidoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:text="Confirme seu pedido"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvPedidoTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgProduto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/camisa" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvNomeProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camiseta Flamengo 2024/25"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camisa masculina oficial do Flamengo edição 2024/25, Seminovo."
                    android:textColor="@color/VerdeEscuro"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/linha2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardProduto"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvOpcoesPagamentoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="468dp"
        android:textAlignment="center"
        android:text="Forma de pagamento e valores"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="@font/inter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="444dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Total:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="R$240"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupPagamento"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="510dp"
        android:paddingStart="20dp"
        android:paddingHorizontal="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPix"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Pix"
            android:textAlignment="center"
            android:checked="false"
            android:textSize="17dp"
            android:textColor="@color/VerdeEscuro"
            app:buttonTint="@color/VerdeEscuro" />

        <RadioButton
            android:id="@+id/rbCartao"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Crédito"
            android:textAlignment="center"
            android:checked="false"
            android:textSize="17dp"
            android:textColor="@color/VerdeEscuro"
            app:buttonTint="@color/VerdeEscuro" />

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Débito"
            android:textAlignment="center"
            android:checked="false"
            android:textSize="17dp"
            android:textColor="@color/VerdeEscuro"
            app:buttonTint="@color/VerdeEscuro"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/estilobtt1"
        android:text="Confirmar pedido"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>