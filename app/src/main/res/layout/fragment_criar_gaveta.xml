<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.closet.CriarGavetaFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="40dp"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="Crição de gaveta"
        android:textColor="#134313"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/image_placeholder_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#dbe4d5"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewtitle"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_image_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nome da gaveta:"
        android:textSize="17sp"
        android:textColor="#134313"
        android:layout_marginTop="70dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder_card"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextGaveta"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Nome da gaveta"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp"
        android:background="@drawable/edittextestilo"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/PrivadoPublico"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_segmented_border"
        android:padding="2dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/editTextGaveta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbPrivado"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:background="@drawable/b1"
            android:button="@null"
            android:gravity="center"
            android:text="Privado"
            android:textSize="16dp"
            android:textColor="@color/VerdeEscuro"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbPublico"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:background="@drawable/b2"
            android:button="@null"
            android:gravity="center"
            android:text="Público"
            android:textSize="16dp"
            android:textColor="@color/VerdeEscuro" />
    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bttCriarGaveta"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:background="@drawable/estilobtt1"
        android:text="Criar gaveta"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="#134313"
        android:paddingVertical="10dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toTopOf="@id/rodape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/VerdeClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/closet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/closeticon"/>
        <ImageView
            android:id="@+id/pesquisar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/search_branco" />
        <ImageView
            android:id="@+id/cadastrarRoupa"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/baseline_add_circle_24" />
        <ImageView
            android:id="@+id/doacao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/iconedoacao" />
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/person_branco" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>