<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.closet.CadRoupaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="40dp"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/cad_peca"
        android:textColor="#134313"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_image_rounded"
        android:contentDescription="@string/app_photo"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/casaco" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_cor"
        android:textColor="#134313"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupCores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioCinza"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_gray" />

        <RadioButton
            android:id="@+id/radioPreto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_black" />

        <RadioButton
            android:id="@+id/radioAzul"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_blue" />

        <RadioButton
            android:id="@+id/radioVermelho"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_red" />

        <RadioButton
            android:id="@+id/radioVerde"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_green" />

        <RadioButton
            android:id="@+id/radioAmarelo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_yellow" />

        <RadioButton
            android:id="@+id/radioRoxo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/circle_purple" />

        <RadioButton
            android:id="@+id/radioArcoIris"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:button="@null"
            android:background="@drawable/rainbow" />
    </RadioGroup>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_categoria"
        android:textColor="#134313"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:alignmentMode="alignMargins"
        android:columnCount="5"
        android:padding="8dp"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/roupa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_roupa" />

        <CheckBox
            android:id="@+id/acess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_acessorio"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/calcado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_calcado"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/traje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_trajebanho"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/esporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_esporte" />

        <!-- Segunda fileira -->

        <CheckBox
            android:id="@+id/masc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_masculino"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/fem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_feminino"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/infantil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_infantil" />

        <CheckBox
            android:id="@+id/intimo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_intima" />

        <CheckBox
            android:id="@+id/uni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_unissex" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/VerdeClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/closet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/closeticon"/>
        <ImageView
            android:id="@+id/pesquisar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/search_branco" />
        <ImageView
            android:id="@+id/cadastrarRoupa"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/baseline_add_circle_24" />
        <ImageView
            android:id="@+id/doacao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/iconedoacao" />
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/person_branco" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_tamanho"
        android:textColor="#134313"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Tamanho"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/Tamanho"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/bg_segmented_border"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt1"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_pp"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_p"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbM"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_m"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_g"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_gg"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbXGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt2"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_xgg"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Proximo"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/estilobtt1"
        android:text="@string/app_prox"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEditar"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@drawable/estilobtt2"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tamanho" />

</androidx.constraintlayout.widget.ConstraintLayout>