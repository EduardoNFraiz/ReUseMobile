<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.closet.CadRoupaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="40dp"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/title_cadastro_peca"
        android:textColor="#134313"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_image_rounded"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/subtitle_cores"
        android:textColor="#134313"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/radioCores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginHorizontal="5dp"
        android:columnCount="5"
        android:rowCount="2"
        android:paddingHorizontal="3dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_segmented_border"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/radioBranco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_branco" />

        <CheckBox
            android:id="@+id/radioPreto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_preto"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/radioAzul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_azul"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/radioVermelho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_vermelho"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/radioRoxo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_roxo" />

        <!-- Segunda fileira -->

        <CheckBox
            android:id="@+id/radioAmarelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_amarelo"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/radioVerde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_verde"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/radioRosa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_cor_rosa" />

        <CheckBox
            android:id="@+id/radioLaranja"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="15sp"
            android:text="@string/option_cor_laranja" />

        <CheckBox
            android:id="@+id/radioMulti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="13sp"
            android:text="@string/option_cor_outro" />

    </GridLayout>



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/subtitle_categoria"
        android:textColor="#134313"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginHorizontal="5dp"
        android:columnCount="5"
        android:rowCount="2"
        android:paddingHorizontal="3dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_segmented_border"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/roupa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_roupa" />

        <CheckBox
            android:id="@+id/acess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_acessorio"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/calcado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_calcado"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/traje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_trajebanho"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/esporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_esporte" />

        <!-- Segunda fileira -->

        <CheckBox
            android:id="@+id/masc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_masculino"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/fem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_feminino"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/infantil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_infantil" />

        <CheckBox
            android:id="@+id/intimo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_intima" />

        <CheckBox
            android:id="@+id/uni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/option_categoria_unissex" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/VerdeClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/closet"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/closeticon"/>
        <ImageView
            android:id="@+id/pesquisar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/search_branco" />
        <ImageView
            android:id="@+id/cadastrarRoupa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/baseline_add_circle_24" />
        <ImageView
            android:id="@+id/doacao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/iconedoacao" />
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/person_branco" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/subtitle_tamanho"
        android:textColor="#134313"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/Tamanho"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/Tamanho"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/bg_segmented_border"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt1"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_pp"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_p"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbM"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_m"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_g"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_gg"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbXGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/radiobtt2"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/option_tamanho_xgg"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Proximo"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/estilobtt1"
        android:text="@string/btn_proximo"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEditar"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@drawable/estilobtt2"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="@string/btn_editar"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tamanho" />

</androidx.constraintlayout.widget.ConstraintLayout>