<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="205dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/gaveta"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/VerdeClarinho"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/drawer_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toTopOf="@id/drawer_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.47"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="@string/nome_gaveta"
                android:textColor="#134313"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="@string/numero_pecas_gaveta"
                android:textColor="#134313"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/drawer_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/bttThreePoint"
                tools:layout_editor_absoluteX="121dp"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:paddingStart="15dp"
                android:src="@drawable/threepoint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/VerdeEscuro" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>