<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.EditarAnuncioFragment"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        app:title="@string/title_editar_anuncio"
        app:titleTextColor="@color/VerdeEscuro"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_breve_descricao"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etBreveDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:gravity="top"
                android:textColor="@color/VerdeEscuro"
                android:hint="@string/label_hint_breve_descricao"
                android:inputType="textMultiLine"
                android:maxLength="150"
                android:background="@drawable/editext_perfil"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_detalhes"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:gravity="top"
                android:textColor="@color/VerdeEscuro"
                android:hint="@string/label_hint_detalhes"
                android:inputType="textMultiLine"
                android:background="@drawable/editext_perfil"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_endereco"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etEnderecoCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_endereco"
                android:textColor="@color/VerdeEscuro"
                android:inputType="textMultiLine"
                android:background="@drawable/editext_perfil"
                android:padding="12dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cnpj"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_carregandocnpj"
                android:inputType="number"
                android:enabled="false"
                android:textColor="@color/VerdeEscuro"
                android:background="@drawable/editext_perfil"
                android:padding="12dp"
                android:layout_marginBottom="30dp"/>

            <!-- ðŸ›‘ NOVO: ContÃªiner para os botÃµes Editar e Salvar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal">

                <!-- ðŸ›‘ NOVO BOTÃƒO: Editar/Cancelar -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bttEditarAnuncio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/estilobtt1"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/btn_editar"
                    android:textAllCaps="false"
                    android:textColor="@color/VerdeEscuro"
                    android:textSize="20sp" />

                <!-- ðŸ›‘ BotÃ£o Salvar (Visibilidade controlada no Kotlin) -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bttSalvarAnuncio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/estilobtt1"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/btn_salvar_anuncio"
                    android:textAllCaps="false"
                    android:textColor="@color/VerdeEscuro"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>