<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/dialog_shape"
    tools:context=".ui.doacao.DialogDoacaoFragment">

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua doação foi \nrealizada!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/VerdeEscuro"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imageSuccess"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/presente" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSair"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/estilobtt1"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Sair"
        android:textAllCaps="false"
        android:textColor="@color/VerdeEscuro"
        android:textSize="20dp" />

</LinearLayout>